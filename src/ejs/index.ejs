      <!-- main -->
      <main class="l-main">
        <section class="l-top-mv p-top-mv js-mv-height">
          <div class="p-top-mv__inner">
            <div class="p-top-mv__header">
              <h2 class="p-top-mv__title"><span class="p-top-mv__title-col01">厳選された素材の</span><br /><span class="p-top-mv__title-col02">本物の味を</span><br /><span class="p-top-mv__title-col03">ご賞味ください</span></h2>
            </div>

            <div class="swiper p-top-mv-swiper js-top-mv-swiper">
              <div class="swiper-wrapper p-top-mv-swiper__wrapper">
                <div class="swiper-slide p-top-mv-swiper__slide">
                  <div class="swiper-img p-top-mv-swiper__img p-top-mv-swiper__img--slide01"></div>
                </div>
                <div class="swiper-slide p-top-mv-swiper__slide">
                  <div class="swiper-img p-top-mv-swiper__img p-top-mv-swiper__img--slide02"></div>
                </div>
                <div class="swiper-slide p-top-mv-swiper__slide">
                  <div class="swiper-img p-top-mv-swiper__img p-top-mv-swiper__img--slide03"></div>
                </div>
              </div>

              <div class="swiper-pagination p-top-mv-swiper__pagination"></div>
            </div>

            <div class="p-top-mv__scroll"><span>SCROLL</span></div>
          </div>
        </section>
        <!-- /p-mv -->

        <div class="p-top-bg">
          <section class="p-top-news l-top-news">
            <div class="p-top-news__inner">
              <div class="p-top-news__header">
                <h2 class="p-top-news__title">お知らせ</h2>
                <p class="p-top-news__link"><a href="<%= path %>news/">一覧を見る</a></p>
              </div>
              <div class="swiper p-top-news__list js-top-news-swiper">
                <div class="swiper-wrapper p-top-news__items">
                  <!-- ループ処理開始 -->
                  <%- include(path + '_component/_top-news',{ path:path, pageMeta:global.pageMeta['home'] }) %>
                  <!-- ループ終了 -->
                </div>
                <div class="swiper-button-prev p-top-news__button-prev"></div>
                <div class="swiper-button-next p-top-news__button-next"></div>
              </div>
            </div>
          </section>
          <!-- /p-top-news -->

          <div class="p-top-menu l-top-menu">
            <!-- <div class="p-top-menu__bg02"><img width="1920" height="344" loading="lazy" decoding="async" src="<%= path %>assets/images/common/bg10.webp" alt="" /></div> -->
            <div class="p-top-menu__inner l-inner">
              <div class="p-top-pickup l-top-pickup">
                <div class="p-top-pickup__inner">
                  <div class="p-top-pickup__wrapper">
                    <div class="p-top-pickup__title">
                      <p class="p-top-pickup__heading">旬のおすすめ</p>
                    </div>
                    <div class="p-top-pickup__img blurTrigger">
                      <a href="<%= path %>pickup">
                        <img width="718" height="404" loading="lazy" decoding="async" src="<%= path %>assets/images/menu_pickup01.jpg" alt="旬のおすすめ" />
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /p-top-pickup -->

              <div class="p-top-menu-cat l-top-menu-cat l-unit">
                <div class="p-top-menu-cat__inner">
                  <div class="p-top-menu-cat__list">
                    <div class="p-top-menu-cat__item blurTrigger delay-time05">
                      <a href="<%= path %>menus/#zanmai">
                        <img width="160" height="480" loading="lazy" decoding="async" src="<%= path %>assets/images/menu_zanmai01.png" alt="三昧盛り" />
                      </a>
                    </div>
                    <div class="p-top-menu-cat__item blurTrigger delay-time1">
                      <a href="<%= path %>menus/#teiban">
                        <img width="160" height="480" loading="lazy" decoding="async" src="<%= path %>assets/images/menu_teiban01.png" alt="定番握り" />
                      </a>
                    </div>
                    <div class="p-top-menu-cat__item blurTrigger delay-time15">
                      <a href="<%= path %>menus/#ippin">
                        <img width="160" height="480" loading="lazy" decoding="async" src="<%= path %>assets/images/menu_ippin01.png" alt="一品料理" />
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /p-top-menu-cat -->

              <div class="p-top-menu-other l-top-menu-other l-unit">
                <div class="p-top-menu-other__inner">
                  <div class="p-top-menu-other__list blurTrigger">
                    <a class="p-top-menu-other__item p-top-menu-other__item--bg01" href="<%= path %>menus/#lunch">
                      <p class="p-top-menu-other__title">ランチメニュー</p>
                    </a>
                    <a class="p-top-menu-other__item p-top-menu-other__item--bg02" href="<%= path %>takeout">
                      <p class="p-top-menu-other__title">お持ち帰り</p>
                    </a>
                  </div>
                </div>
              </div>
              <!-- /p-top-menu-other -->
            </div>
            <!-- <div class="p-top-menu__bg01"><img width="1920" height="1697" loading="lazy" decoding="async" src="<%= path %>assets/images/common/bg11.webp" alt=""></div> -->
